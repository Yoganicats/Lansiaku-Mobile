<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info_ObatActivity">


    <View
        android:id="@+id/rectangle_4"
        android:layout_width="410dp"
        android:layout_height="151dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"


        android:layout_marginLeft="-6dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rectangle_temu" />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"

        android:layout_marginTop="13dp"
        android:background="@null"
        app:srcCompat="@drawable/chevron_left"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <TextView
        android:id="@+id/Tem2u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="44dp"
        android:text="Info Obat"
        android:textColor="@color/grey"
        android:textSize="28sp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/retangle"
        android:focusable="false"


        app:iconifiedByDefault="false"
        app:queryHint="Ketik Disini Untuk Mencari..." />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_alignParentTop="true"
        android:layout_marginTop="187dp">


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Fasilit"
            android:foregroundGravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"


                android:layout_alignParentTop="true"

                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="1084dp"
                android:text="Daftar Obat Paling banyak di cari"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_Ambroxol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="221dp"
                android:background="@drawable/bg_button_penyakit_dan_obat"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:text="Ambroxol"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/button_Ibuproven"
                android:layout_width="152dp"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="195dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="64dp"
                android:background="@drawable/bg_button_penyakit_dan_obat"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:text="Ibuproven"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_Methylprednisolone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="215dp"
                android:background="@drawable/bg_button_penyakit_dan_obat"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:text="Acetylsistein"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_Amoxicillin"
                android:layout_width="163dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="204dp"
                android:layout_marginTop="101dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/bg_button_penyakit_dan_obat"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:text="Amoxicillin"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Fasilitas1fe"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="159dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="1084dp"
                android:text="Info Obat Berdasarkan Kategori"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_ObatDemam"
                android:layout_width="175dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="197dp"
                android:layout_marginEnd="230dp"
                android:background="@drawable/bg_button_penyakit_dan_obat"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:text="Obat Demam"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_ObatTelinga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="187dp"
                android:layout_marginTop="197dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/bg_button_penyakit_dan_obat"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Obat Telinga"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_ObatJantung"
                android:layout_width="186dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="253dp"
                android:layout_marginEnd="218dp"
                android:background="@drawable/bg_button_penyakit_dan_obat"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Obat Jantung"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_ObatAntiNyeri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="198dp"
                android:layout_marginTop="253dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/bg_button_penyakit_dan_obat"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Obat Nyeri"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rV_Obat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="318dp"
                android:layout_marginEnd="0dp"
                tools:listitem="@layout/item_info_obat" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>




