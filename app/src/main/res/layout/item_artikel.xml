<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_artikel"
            android:layout_width="179dp"
            android:layout_height="197dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tv_judulartikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_artikel"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="-6dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/img_artikel"
            android:layout_toRightOf="@id/img_artikel"
            android:gravity="center_vertical"
            android:maxLines="5"
            android:textAlignment="gravity"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:text="Diabetes pada Lansia, Ini Gejala dan Cara Mengendalikannya" />

        <TextView
            android:id="@+id/tv_penjelasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_judulartikel"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"

            android:layout_marginLeft="6dp"
            android:layout_marginTop="-6dp"

            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/img_artikel"
            android:layout_toRightOf="@id/img_artikel"


            android:textSize="16sp"
            tools:text="Pada dasarnya, diabetes adalah penyakit yang bisa dialami oleh siapa saja, namun cenderung lebih ...." />

        <TextView
            android:id="@+id/tv_kategori_artikel"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@id/tv_judulartikel"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="93dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/img_artikel"
            android:layout_toRightOf="@id/img_artikel"
            android:background="@drawable/btn_diabet"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="5"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            tools:text="Diabetes" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>