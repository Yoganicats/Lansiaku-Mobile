<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtikelActivity">


    <View
        android:id="@+id/rectangle_4"
        android:layout_width="410dp"
        android:layout_height="151dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"


        android:layout_marginLeft="-6dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rectangle_temu" />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"

        android:layout_marginTop="13dp"
        android:background="@null"
        app:srcCompat="@drawable/chevron_left"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <TextView
        android:id="@+id/Tem2u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="44dp"
        android:text="Artikel"
        android:textColor="@color/grey"
        android:textSize="27sp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignBottom="@+id/Fasilit"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/retangle"
        android:focusable="false"


        app:iconifiedByDefault="false"
        app:queryHint="Ketik Disini Untuk Mencari..." />

    <TextView
        android:id="@+id/Fasilit"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"


        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="34dp"
        android:text="Artikel Minggu Ini"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Fasilit"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"


        android:scrollbars="horizontal"
        android:layout_marginBottom="1dp">

        <!-- child view -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center"

            android:orientation="horizontal">

            <!-- LinearLayout children -->

            <Button
                android:id="@+id/btn_Semua_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:textAllCaps="false"

                android:foreground="?android:attr/selectableItemBackground"
                android:text="Semua"
                android:background="@drawable/btn_artikel_ijo"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btn_Kolestrol_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/btn_artikel"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="15dp"
                android:text="Kolestrol"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/ijo"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btn_mata_Artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="Mata"
                android:textAllCaps="false"
                android:textColor="@color/ijo"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginStart="15dp"
                android:background="@drawable/btn_artikel"
                android:textSize="23sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_Mulut_Artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="Kesehatan Mulut"

                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginStart="15dp"
                android:background="@drawable/btn_artikel"/>
            <Button
                android:id="@+id/btn_Nutrisi_Artikel"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:textAllCaps="false"
                android:text="Nutrisi"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginStart="15dp"
                android:background="@drawable/btn_artikel"/>
            <Button
                android:id="@+id/btn_paru_Artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:padding="15dp"
                android:textAllCaps="false"
                android:text="Paru-paru"
                android:textColor="@color/ijo"
                android:textSize="23sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginStart="15dp"
                android:background="@drawable/btn_artikel"/>

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Artikel"
        android:layout_width="411dp"
        android:layout_height="602dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="297dp"
        android:layout_marginBottom="-8dp"
        tools:listitem="@layout/item_artikel" />

</RelativeLayout>




