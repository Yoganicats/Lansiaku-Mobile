<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/rectangle_4"
            android:layout_width="411dp"
            android:layout_height="121dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="-1dp"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rectangle_2344"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="88dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user_circle" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="201dp"
            android:layout_height="28dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="100dp"
            android:text="Halo, Selamat Datang"
            android:textColor="@color/warnahalo"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="213dp"
            android:layout_height="36dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="-10dp"
            android:text="Nama Penguna"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="61dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="23dp"
            android:backgroundTint="@color/notif"
            android:src="@drawable/icon_notifcations"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_4"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078"
            tools:ignore="SpeakableTextPresentCheck"
            android:importantForAccessibility="no" />


        <TextView
            android:id="@+id/layananku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="168dp"
            android:text="Kategori Layanan Lansiaku"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/include"
            layout="@layout/layout_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_alignParentTop="true"
            android:layout_marginTop="134dp" />

        <TextView
            android:id="@+id/promoBulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/include"
            android:layout_marginStart="12dp"

            android:layout_marginTop="2dp"
            android:text="Promo Bulan Ini"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="549dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/idViewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"

            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="554dp"

            android:layout_marginEnd="24dp"


            android:layout_marginBottom="82dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button_Home"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="756dp"
            android:layout_marginEnd="314dp"
            android:background="@null"
            android:clickable="true"
            android:drawableTop="@drawable/homes"
            android:drawableTint="@color/ijo"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Home"
            android:textColor="@color/ijo"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_Pesan"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="755dp"
            android:layout_marginEnd="209dp"
            android:background="@null"
            android:clickable="true"

            android:drawableTop="@drawable/email"
            android:drawableTint="@color/ijo"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Pesan"
            android:textColor="@color/ijo"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_Riwayat"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="215dp"
            android:layout_marginTop="755dp"
            android:layout_marginEnd="108dp"
            android:background="@null"
            android:clickable="true"
            android:drawableTop="@drawable/history"
            android:drawableTint="@color/ijo"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Riwayat"
            android:textColor="@color/ijo"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_Profile"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="321dp"
            android:layout_marginTop="754dp"
            android:layout_marginEnd="2dp"
            android:background="@null"
            android:clickable="true"
            android:drawableTop="@drawable/user_profiless"
            android:drawableTint="@color/ijo"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Profile"
            android:textColor="@color/ijo"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>