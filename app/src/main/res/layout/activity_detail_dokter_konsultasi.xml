<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailDokterKonsultasi">

    <View
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/view_konsultasi" />


    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:background="@null"
        app:srcCompat="@drawable/chevron_left"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="326dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Detail Dokter Konsultasi"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"


        android:layout_alignParentTop="true"

        android:layout_marginStart="101dp"
        android:layout_marginTop="57dp"
        android:text="Lokasi Anda"

        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/yogya"
        android:layout_width="157dp"
        android:layout_height="29dp"


        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="47dp"
        android:layout_toEndOf="@+id/lokasi"
        android:text="Yogyakarta, DIY"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="30dp"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="54dp"
        app:srcCompat="@drawable/lokasi_marker" />

    <ScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="6dp"






        android:layout_marginBottom="1dp"
        android:scrollbars="vertical">

        <!-- child view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="vertical">

            <!-- LinearLayout children -->

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Fasilit"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/step2_konsultasi" />

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:srcCompat="@drawable/detail_dokter_donny" />

            <TextView
                android:id="@+id/txt_namaDokterDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Dr. Donny Wisnu, S.Ked"
                android:textColor="#4D9599"


                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_namaSpesialisDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"

                android:gravity="center"
                android:text="Spesialis Jantung"
                android:textColor="@color/ijo"
                android:textSize="24sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/konsulDurasiTxt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableTop="@drawable/icon_menit"
                    android:gravity="center"
                    android:text="30 Menit\n Durasi konsultasi"
                    android:textColor="@color/ijo"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableTop="@drawable/icon_pengalamankerja"
                    android:gravity="center"
                    android:text="20 Tahun\nPengalaman Kerja"
                    android:id="@+id/tahunPengalamanKerjaTxt"
                    android:textColor="@color/ijo"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jlhPasienTxt"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableTop="@drawable/icon_jumlahpasien"
                    android:gravity="center"
                    android:text="200 pasien\nPasien Konsultasi"
                    android:textColor="@color/ijo"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>





            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginTop="10dp"

                android:text="Keahlian"
                android:textColor="#4D9599"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtKeahlian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginTop="10dp"

                android:text="Kateterisasi jantung: pemeriksaan dengan memasukkan selang panjang atau kateter ke dalam pembuluh darah menuju jantung untuk melihat masalah pembuluh darah dan kelainan jantung.\n\nAngiografi: pemeriksaan arteri koroner untuk mencari arteri yang menyempit atau tersumbat menggunakan zat pewarna khusus yang disuntikkan ke pembuluh darah.\n\nElektrofisiologi: pemeriksaan menggunakan sinyal listrik ke jantung untuk memeriksa irama jantung yang tidak normal."
                android:textColor="@color/ijo"
                android:textSize="26sp" />

            <Button
                android:id="@+id/lanjutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_btn"
                android:text="Lanjut"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>